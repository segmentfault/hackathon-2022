<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7DBDD">
<!--    ************************主页****************************-->


<!--    上半部分-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/royalblue"
        android:orientation="horizontal"
        android:padding="30px">

        <!--天气功能-->
        <TextView
            android:id="@+id/weather_ed"
            android:layout_width="150dp"
            android:layout_height="57dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="观天察地"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@color/royalblue"
            android:orientation="vertical">
            <!--每日名言-->
            <TextView
                android:id="@+id/saying_ed"
                android:layout_width="211dp"
                android:layout_height="40dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:text="今天不学习明天变垃圾今天不学习明天变垃圾今天不学习"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/saying_ed1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="——今天不学习明天变垃圾今天"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

<!--    下方菜单栏-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--查课表-->
            <Button
                android:id="@+id/shopping_ed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableTop="@mipmap/class_schedule"
                android:gravity="center"
                android:text="查课表" />
            <!--            查考场-->
            <Button
                android:id="@+id/market_ed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableTop="@mipmap/examination_room"
                android:gravity="center"
                android:text="查考场" />
            <!--            查空教室-->
            <Button
                android:id="@+id/hidtory_ed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableTop="@mipmap/classroom"
                android:gravity="center"
                android:text="查空教室" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--            查询成绩-->
            <Button
                android:id="@+id/buy_ed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableTop="@mipmap/score"
                android:gravity="center"
                android:text="查询成绩" />
            <!--            图书查询-->
            <Button
                android:id="@+id/certification_ed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableTop="@mipmap/book"
                android:gravity="center"
                android:text="图书查询" />
            <!--            一卡通余额-->
            <Button
                android:id="@+id/notify_ed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableTop="@mipmap/notify"
                android:gravity="center"
                android:text="实时疫情" />
        </LinearLayout>
    </LinearLayout>

<!--    下方内容-->
    <LinearLayout
        android:id="@+id/content_ed"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:background="@color/white">

        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/content_ed2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="57dp"
            android:layout_height="99dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="85dp"
            app:srcCompat="@mipmap/shouye" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="27dp"
            android:layout_height="84dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            app:srcCompat="@mipmap/fabu" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="38dp"
            android:layout_height="101dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="37dp"
            android:layout_marginBottom="5dp"
            app:srcCompat="@mipmap/grzx" />

    </RelativeLayout>

</LinearLayout>